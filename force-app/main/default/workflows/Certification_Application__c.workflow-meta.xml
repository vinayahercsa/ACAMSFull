        <field>Asset_Pending_to_Process__c</field>
        <literalValue>1</literalValue>
        <name>Asset Pending to Process</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Date_Submitted</fullName>
        <field>Date_Submitted__c</field>
        <formula>TODAY()</formula>
        <name>Date Submitted</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Application_Hold</fullName>
        <field>Application_on_Hold__c</field>
        <literalValue>0</literalValue>
        <name>Update Application Hold</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Approval_Date_Cert</fullName>
        <field>Application_Approval_Date__c</field>
        <formula>NOW()</formula>
        <name>Update Approval Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Application Date</fullName>
        <actions>
            <name>Application_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Certification_Application__c.Total_Credits__c</field>
            <operation>greaterThan</operation>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <field>Certification_Application__c.Application_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Application Received</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Certification_Application__c.Total_Credits__c</field>
            <operation>greaterOrEqual</operation>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Asset Pending to Process</fullName>
        <actions>
            <name>Asset_Pending_to_Process</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(ISCHANGED(Status__c), OR(ISPICKVAL(Status__c,&quot;Under Review&quot;), ISPICKVAL(Status__c,&quot;Approved&quot;)),$Profile.Name &lt;&gt; &apos;Data Migration&apos;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Certification Approve</fullName>
        <active>false</active>
        <booleanFilter>4 AND (1 AND 2 AND 3)</booleanFilter>
        <criteriaItems>
            <field>Certification_Application__c.Credits__c</field>
            <operation>greaterOrEqual</operation>
            <value>40</value>
        </criteriaItems>
        <criteriaItems>
            <field>Certification_Application__c.Eligibility_Form__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Certification_Application__c.Signed_Affidavit__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Certification Disapprove</fullName>
        <active>false</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Certification_Application__c.Credits__c</field>
            <operation>lessThan</operation>
            <value>40</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Date Submitted</fullName>
        <actions>
            <name>Date_Submitted</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(     ISCHANGED(Status__c),     UPPER(TEXT(PRIORVALUE(Status__c))) = &quot;STARTED&quot;,     UPPER(TEXT(Status__c)) = &quot;UNDER REVIEW&quot; ,$Profile.Name &lt;&gt; &apos;Data Migration&apos; )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Internal Notification for On Hold Application and Received TTA</fullName>
        <actions>
            <name>Internal_Notification_for_On_Hold_Application_and_Received_TTA</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Certification_Application__c.Signature3_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Certification_Application__c.Application_on_Hold__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Update Approval Date Certification Application</fullName>
        <actions>
            <name>Update_Application_Hold</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Approval_Date_Cert</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Certification_Application__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>notEqual</operation>
            <value>Data Migration</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
